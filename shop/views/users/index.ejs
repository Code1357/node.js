<h2>ユーザー情報一覧</h2>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Zip Code</th>
    </tr>
  </thead>
  <tbody>
    <!--ビューの中で、ユーザーの配列をループする-->
    <% users.forEach(user => { %>
    <tr>
      <td><%# ユーザーの名前とIDを、HTMLに埋め込む %>
        <a href="<%= `/users/${user._subscribedAccount}` %>">
          <%= user.fullName %>
        </a>
      </td>
      <td>
        <%= user.email %>
      </td>
      <td>
        <%= user.zipCode %>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>


