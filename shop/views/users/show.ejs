<h1>ユーザーの情報
  <%= user.fullName %>
</h1>
<table class="table">
  <tr>
    <th>Name</th>
    <td>
      <%= user.fullName %>
    </td>
  </tr>
  <tr>
    <th>Email</th>
    <td>
      <%= user.email %>
    </td>
  </tr>
  <tr>
    <th>Zip Code</th>
    <td>
      <%= user.zipCode %>
    </td>
  </tr>
  <tr>
    <th>Password</th>
    <td class="hidden-text">
      <%= user.password %>
    </td>
  </tr>
</table>

<%# リンクされた購読者アカウントをチェック %> 
<% if (user.subscribedAccount) { %>
<h4 class="center"> このユーザーは、購読用のアカウントを持っています
  <a href="<%=`/subscribers/${user.subscribedAccount}` %>">
    </a>.
</h4>
<% } %>


<div class="center">
  <a class="button" href="/users">全てのユーザーを確認</a>
</div>
<a class="button" href="<%=`/users/${user._id}/edit`%>">
    ユーザーの詳細を編集する
  </a>
</div>
<div>
  <a class="button" href="<%= `/users/${user._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')">削除</a>
</div>